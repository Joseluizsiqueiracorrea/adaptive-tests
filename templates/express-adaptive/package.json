{
  "name": "express-adaptive-template",
  "version": "1.0.0",
  "description": "Express.js template with adaptive-tests integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:adaptive": "jest tests/adaptive",
    "test:traditional": "jest tests/traditional",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "scaffold": "adaptive-tests scaffold",
    "scaffold:batch": "adaptive-tests scaffold --batch src",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "format": "prettier --write 'src/**/*.js' 'tests/**/*.js'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "adaptive-tests": "latest",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "@babel/core": "^7.22.20",
    "@babel/preset-env": "^7.22.20"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "express",
    "adaptive-tests",
    "testing",
    "jest"
  ],
  "license": "MIT"
}