{
  "name": "@adaptive-tests/javascript",
  "version": "0.3.0",
  "description": "JavaScript testing that survives refactoring - finds code by structure, not file paths. Never fix broken imports again.",
  "main": "src/index.js",
  "types": "index.d.ts",
  "bin": {
    "adaptive-tests": "cli/init.js",
    "adaptive-tests-doctor": "cli/doctor.js",
    "create-adaptive-app": "cli/create-adaptive-app"
  },
  "files": [
    "cli/",
    "docs/",
    "examples/",
    "fixtures/",
    "jest/",
    "scripts/",
    "src/",
    "templates/",
    "index.d.ts",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --runInBand",
    "lint": "eslint src/**/*.js",
    "build": "tsc --project tsconfig.json --emitDeclarationOnly",
    "restore": "node scripts/restore.js",
    "refactor": "node scripts/refactor.js",
    "broken": "node scripts/demo-broken.js",
    "restore-broken": "node scripts/restore-broken.js",
    "restore-ts": "node scripts/restore-ts.js",
    "refactor-ts": "node scripts/refactor-ts.js",
    "demo-broken-ts": "node scripts/demo-broken-ts.js",
    "auto-demo": "node scripts/auto-demo.js",
    "compare": "node scripts/compare.js",
    "build:plugins": "node scripts/build-packages.js || (echo 'Skipping plugin build (preview release)' && exit 0)"
  },
  "dependencies": {
    "@babel/parser": "^7.25.0",
    "@lezer/common": "^1.2.3",
    "@lezer/rust": "^1.0.2",
    "debug": "^4.3.4",
    "glob": "^11.0.3",
    "java-parser": "^3.0.1",
    "minimist": "^1.2.8",
    "php-parser": "^3.2.5",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "testing",
    "test",
    "jest",
    "mocha",
    "vitest",
    "refactoring",
    "ast",
    "discovery",
    "adaptive",
    "resilient",
    "import-free",
    "ai-ready",
    "test-runner",
    "test-framework",
    "javascript",
    "nodejs",
    "unit-testing",
    "integration-testing",
    "tdd",
    "bdd",
    "automatic",
    "smart-testing"
  ],
  "optionalDependencies": {
    "tree-sitter": "^0.25.0",
    "tree-sitter-go": "^0.25.0"
  }
}