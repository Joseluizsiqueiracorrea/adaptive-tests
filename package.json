{
  "name": "adaptive-tests-monorepo",
  "private": true,
  "version": "0.3.0",
  "description": "Monorepo for adaptive-tests - AI-ready testing infrastructure",
  "workspaces": [
    "languages/javascript",
    "languages/typescript",
    "tools/*"
  ],
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "test:js": "npm run test --workspace=languages/javascript",
    "test:ts": "npm run test --workspace=languages/typescript",
    "test:python": "cd languages/python && python -m pytest tests/",
    "test:java": "cd languages/java && mvn test",
    "build": "npm run build --workspaces --if-present",
    "build:js": "npm run build --workspace=languages/javascript",
    "build:ts": "npm run build --workspace=languages/typescript",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "validate": "node scripts/validate-refactor.js"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anon57396/adaptive-tests.git"
  },
  "author": "Jason Kempf <jasonkempf@gmail.com>",
  "license": "MIT"
}