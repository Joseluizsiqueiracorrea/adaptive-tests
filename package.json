{
  "name": "adaptive-tests",
  "version": "0.2.1",
  "description": "Adaptive test discovery that survives refactors without losing real bug coverage.",
  "main": "src/adaptive/index.js",
  "bin": {
    "adaptive-tests": "src/cli/init.js"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:traditional": "jest examples/calculator/tests/traditional",
    "test:adaptive": "jest examples/calculator/tests/adaptive",
    "test:both": "npm run test:traditional && npm run test:adaptive",
    "test:traditional:ts": "jest examples/typescript/tests/traditional",
    "test:adaptive:ts": "jest examples/typescript/tests/adaptive",
    "test:typescript": "npm run test:traditional:ts && npm run test:adaptive:ts",
    "refactor": "node refactor.js",
    "restore": "node restore.js",
    "demo:broken": "node demo-broken.js",
    "restore:broken": "node restore-broken.js",
    "refactor:ts": "node refactor-ts.js",
    "restore:ts": "node restore-ts.js",
    "demo:broken:ts": "node demo-broken-ts.js",
    "restore:broken:ts": "node restore-broken-ts.js",
    "validate": "node validate.js",
    "demo": "npm run restore && npm run test:both && echo '\\nüîß REFACTORING...\\n' && npm run refactor && echo '\\nüìù TRADITIONAL TESTS:\\n' && npm run test:traditional || true && echo '\\n‚úÖ ADAPTIVE TESTS:\\n' && npm run test:adaptive",
    "demo:full": "npm run validate",
    "compare": "node compare.js",
    "benchmark": "node benchmark.js",
    "prepublishOnly": "npm run test && npm run validate"
  },
  "keywords": [
    "testing",
    "adaptive",
    "refactoring",
    "jest",
    "mocha",
    "test-automation",
    "dynamic-discovery"
  ],
  "author": "Jason Kempf <jasonkempf@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.(js|ts)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts",
      "!src/**/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "verbose": false,
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": false,
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anon57396/adaptive-tests.git"
  },
  "bugs": {
    "url": "https://github.com/anon57396/adaptive-tests/issues"
  },
  "homepage": "https://github.com/anon57396/adaptive-tests#readme",
  "types": "types/index.d.ts",
  "sideEffects": false,
  "files": [
    "src",
    "types",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "ROADMAP.md",
    "SECURITY.md",
    "demo.gif"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "ts-node": ">=10.0.0"
  },
  "peerDependenciesMeta": {
    "ts-node": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "require": "./src/adaptive/index.js"
    },
    "./package.json": "./package.json"
  }
}
