{
  "name": "adaptive-tests",
  "private": true,
  "version": "0.3.0",
  "description": "AI-ready testing infrastructure - language-specific packages",
  "scripts": {
    "test": "npm run test:traditional && npm run test:adaptive && npm run test:typescript && npm run test:python && npm run test:java",
    "test:js": "npm --prefix languages/javascript run test",
    "test:traditional": "npm --prefix languages/javascript run test -- tests/traditional",
    "test:adaptive": "npm --prefix languages/javascript run test -- tests/adaptive",
    "test:typescript": "npm --prefix languages/typescript run test",
    "test:ts": "npm run test:typescript",
    "test:python": "python3 -m pip install --quiet --disable-pip-version-check -e \"languages/python[test]\" && cd languages/python && python3 -m pytest -v",
    "test:java": "mvn -f languages/java/pom.xml test",
    "demo": "node scripts/demo/validate.js",
    "demo:full": "node scripts/demo/auto-demo.js",
    "compare": "node scripts/demo/compare.js",
    "refactor": "node scripts/demo/refactor.js",
    "restore": "node scripts/demo/restore.js",
    "refactor:ts": "node scripts/demo/refactor-ts.js",
    "restore:ts": "node scripts/demo/restore-ts.js",
    "demo:broken": "node scripts/demo/demo-broken.js",
    "restore:broken": "node scripts/demo/restore-broken.js",
    "demo:broken:ts": "node scripts/demo/demo-broken-ts.js",
    "restore:broken:ts": "node scripts/demo/restore-broken-ts.js",
    "validate": "node scripts/validate-refactor.js",
    "agent:preflight": "node scripts/check-agent-state.js"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anon57396/adaptive-tests.git"
  },
  "author": "Jason Kempf <jasonkempf@gmail.com>",
  "license": "MIT"
}
