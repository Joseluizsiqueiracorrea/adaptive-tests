{
  "name": "adaptive-tests-demo",
  "version": "1.0.0",
  "description": "Tests that don't break when you refactor",
  "main": "src/adaptive/index.js",
  "scripts": {
    "test": "jest",
    "test:traditional": "jest examples/calculator/tests/traditional",
    "test:adaptive": "jest examples/calculator/tests/adaptive",
    "test:both": "npm run test:traditional && npm run test:adaptive",
    "refactor": "node refactor.js",
    "restore": "node restore.js",
    "demo:broken": "node demo-broken.js",
    "restore:broken": "node restore-broken.js",
    "validate": "node validate.js",
    "demo": "npm run restore && npm run test:both && echo '\\n\ud83d\udd27 REFACTORING...\\n' && npm run refactor && echo '\\n\ud83d\udcdd TRADITIONAL TESTS:\\n' && npm run test:traditional || true && echo '\\n\u2705 ADAPTIVE TESTS:\\n' && npm run test:adaptive",
    "demo:full": "npm run validate",
    "compare": "node compare.js"
  },
  "keywords": [
    "testing",
    "adaptive",
    "refactoring",
    "jest",
    "mocha",
    "test-automation",
    "dynamic-discovery"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.(js|ts)"
    ],
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "verbose": false,
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": false,
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adaptive-tests/adaptive-tests"
  },
  "bugs": {
    "url": "https://github.com/adaptive-tests/adaptive-tests/issues"
  },
  "homepage": "https://github.com/adaptive-tests/adaptive-tests#readme"
}
