{
  "name": "adaptive-tests",
  "private": true,
  "version": "0.3.0",
  "description": "AI-ready testing infrastructure - language-specific packages",
  "scripts": {
    "lint:markdown": "node scripts/lint-markdown.js",
    "lint:links": "node scripts/lint-links.js",
    "test": "npm run test:traditional && npm run test:adaptive && npm run test:typescript && npm run test:python && npm run test:java",
    "test:js": "npm --prefix languages/javascript run test",
    "test:traditional": "npm --prefix languages/javascript run test -- tests/traditional",
    "test:adaptive": "npm --prefix languages/javascript run test -- tests/adaptive",
    "test:typescript": "npm --prefix languages/typescript run test",
    "test:ts": "npm run test:typescript",
    "test:python": "python3 -m pip install --quiet --disable-pip-version-check --no-warn-script-location -e \"languages/python[test]\" && cd languages/python && python3 -m pytest -v",
    "test:java": "mvn -f languages/java/pom.xml test",
    "demo": "npm run validate",
    "demo:full": "npm --prefix languages/javascript run auto-demo",
    "compare": "npm --prefix languages/javascript run compare",
    "refactor": "npm run demo:js:refactor",
    "restore": "npm run demo:js:restore",
    "refactor:ts": "npm run demo:ts:refactor",
    "restore:ts": "npm run demo:ts:restore",
    "demo:broken": "npm run demo:js:broken",
    "restore:broken": "npm run demo:js:restore-broken",
    "demo:broken:ts": "npm run demo:ts:broken",
    "restore:broken:ts": "npm run demo:ts:restore-broken",
    "validate": "node scripts/validate.js",
    "doctor": "node scripts/doctor.js",
    "playground": "node scripts/playground.js",
    "agent:preflight": "node scripts/check-agent-state.js",
    "release:prep": "node scripts/prepare-publish.js 1.0.0",
    "release:restore": "node scripts/restore-dev.js",
    "demo:js:restore": "node languages/javascript/scripts/restore.js",
    "demo:js:refactor": "node languages/javascript/scripts/refactor.js",
    "demo:js:broken": "node languages/javascript/scripts/demo-broken.js",
    "demo:js:restore-broken": "node languages/javascript/scripts/restore-broken.js",
    "demo:js:restore-ts": "node languages/javascript/scripts/restore-ts.js",
    "demo:js:refactor-ts": "node languages/javascript/scripts/refactor-ts.js",
    "demo:js:broken-ts": "node languages/javascript/scripts/demo-broken-ts.js",
    "demo:ts:restore": "node languages/typescript/scripts/restore-ts.js",
    "demo:ts:refactor": "node languages/typescript/scripts/refactor-ts.js",
    "demo:ts:broken": "node languages/typescript/scripts/demo-broken-ts.js",
    "demo:ts:restore-broken": "node languages/typescript/scripts/restore-broken-ts.js",
    "demo:ts:restore-broken-ts": "node languages/typescript/scripts/restore-broken-ts.js",
    "demo:ts:restore-ts": "node languages/typescript/scripts/restore-ts.js",
    "demo:ts:refactor-ts": "node languages/typescript/scripts/refactor-ts.js",
    "demo:ts:broken-ts": "node languages/typescript/scripts/demo-broken-ts.js",
    "publish:javascript": "cd languages/javascript && npm publish",
    "publish:typescript": "cd languages/typescript && npm publish",
    "publish:meta": "cd packages/adaptive-tests && npm publish",
    "publish:all": "npm run publish:javascript && npm run publish:typescript && npm run publish:meta"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anon57396/adaptive-tests.git"
  },
  "author": "Jason Kempf <jasonkempf@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "linkinator": "^4.0.0",
    "markdownlint": "^0.38.0",
    "markdownlint-cli": "^0.45.0"
  }
}
