{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Generate .d.ts files from JSDoc in .js files
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types",

    // Type checking options for tests
    "noImplicitAny": false, // Allow implicit any for tests
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*.js", // Include all JS files in src for declaration generation
    "tests/**/*.ts" // Include test files for type checking
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}