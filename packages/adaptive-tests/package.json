{
  "name": "adaptive-tests",
  "version": "0.3.0",
  "description": "Tests that don't break when you move files. Smart test discovery finds your code by understanding its structure, not hardcoded paths. Works with Jest, Mocha, Vitest.",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "bin": {
    "adaptive-tests": "bin/adaptive-tests.js",
    "create-adaptive-app": "bin/create-adaptive-app.js"
  },
  "exports": {
    ".": {
      "require": "./index.js",
      "import": "./index.mjs"
    },
    "./typescript": {
      "require": "./typescript.js",
      "import": "./typescript.mjs"
    }
  },
  "files": [
    "bin",
    "index.js",
    "index.mjs",
    "index.d.ts",
    "typescript.js",
    "typescript.mjs",
    "README.md"
  ],
  "keywords": [
    "adaptive",
    "testing",
    "test",
    "jest",
    "mocha",
    "vitest",
    "refactoring",
    "refactor",
    "resilient",
    "import",
    "imports",
    "broken-tests",
    "test-maintenance",
    "ast",
    "ai",
    "ai-ready",
    "discovery",
    "smart",
    "automatic",
    "test-runner",
    "test-framework",
    "developer-tools",
    "devtools",
    "dx",
    "developer-experience"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Adaptive Tests",
  "license": "MIT",
  "dependencies": {
    "@adaptive-tests/javascript": "^0.3.0"
  },
  "optionalDependencies": {
    "@adaptive-tests/typescript": "^0.3.0"
  },
  "peerDependencies": {
    "ts-node": ">=10.0.0",
    "typescript": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "ts-node": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  }
}
