#!/bin/sh
set -e

if [ -z "$JAVA_HOME" ] ; then
  JAVA="java"
else
  JAVA="$JAVA_HOME/bin/java"
fi

WRAPPER_DIR="$(cd "$(dirname "$0")" && pwd -P)/.mvn/wrapper"
WRAPPER_JAR="$WRAPPER_DIR/maven-wrapper.jar"
WRAPPER_PROPERTIES="$WRAPPER_DIR/maven-wrapper.properties"

if [ ! -f "$WRAPPER_JAR" ]; then
  if [ ! -f "$WRAPPER_PROPERTIES" ]; then
    echo "Could not find $WRAPPER_PROPERTIES" >&2
    exit 1
  fi
  SOURCE_URL=$(grep -E '^wrapperUrl=' "$WRAPPER_PROPERTIES" | cut -d= -f2-)
  mkdir -p "$WRAPPER_DIR"
  echo "Downloading Maven wrapper jar from $SOURCE_URL"
  curl -fsSL "$SOURCE_URL" -o "$WRAPPER_JAR"
fi

exec "$JAVA" \
  -Dmaven.multiModuleProjectDirectory="$(pwd)" \
  -classpath "$WRAPPER_JAR" \
  org.apache.maven.wrapper.MavenWrapperMain "$@"
